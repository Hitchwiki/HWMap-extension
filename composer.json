{
  "name": "HWMap",
  "type": "mediawiki-extension",
  "description": "Hitchwiki.org Map extension for MediaWiki. Requires Semantic MediaWiki.",
  "keywords": [
    "Hitchwiki",
    "Hitchhiking",
    "Map",
    "MediaWiki",
    "SMW",
    "Semantic MediaWiki"
  ],
  "homepage": "https://github.com/Hitchwiki/HWMap-extension",
  "license": "MIT",
  "authors": [
    {
      "name": "Hitchwiki",
      "homepage": "http://hitchwiki.org"
    }
  ],
  "support": {
    "irc": "irc://irc.freenode.net/hitchhiking",
    "issues": "https://github.com/Hitchwiki/HWMap-extension/issues",
    "source": "https://github.com/Hitchwiki/HWMap-extension"
  },
  "scripts": {
    "post-update-cmd": [
      "git clone -b master 'https://github.com/tubalmartin/spherical-geometry-php.git' lib/SphericalGeometry",
      "cd lib/SphericalGeometry && git checkout tags/1.1.1",
      "bower update --config.interactive=false"
    ],
    "post-install-cmd": [
      "git clone -b master 'https://github.com/tubalmartin/spherical-geometry-php.git' lib/SphericalGeometry",
      "cd lib/SphericalGeometry && git checkout tags/1.1.1",
      "bower install --config.interactive=false"
    ]
  },
  "config": {
    "vendor-dir": "lib/"
  }
}
